version=@version@

LIBDIR='@libdir@'

[[ -r ${LIBDIR}/util-msg.sh ]] && source ${LIBDIR}/util-msg.sh

import ${LIBDIR}/util.sh
import ${LIBDIR}/util-pkg.sh
import ${LIBDIR}/util-pkg-tree.sh

load_user_info

load_config "${AT_USERCONFDIR}/artools.conf" || load_config "${SYSCONFDIR}/artools.conf"

green="\x1b[32m"
red="\x1b[31m"
nocolor="\x1b[0m"

declare -A UPDATES

msg_table_header "%-30s %-30s %-30s %-30s" "Repository" "Package" "Artix version" "Arch version"

for repo in ${repo_tree_import[@]}; do
    for pkg in ${tree_dir_artix}/$repo/*; do
        if [[ -f $pkg/PKGBUILD ]];then
            artixPKGBUILD=$pkg/PKGBUILD
            source $artixPKGBUILD 2>/dev/null
            package=$(basename $pkg)
            artixfv=$(get_full_version $package)
        else
            continue
        fi
        set_import_path $repo $package
        archrepo=$src
        archPKGBUILD="$src/PKGBUILD"
        if [[ -f $archPKGBUILD ]];then
            source $archPKGBUILD 2>/dev/null
            archfv=$(get_full_version $package)
        else
            continue
        fi
        if (( $(vercmp $artixfv $archfv) < 0 ));then
            packages+=" $package"
            UPDATES[$package]="$archPKGBUILD $artixPKGBUILD"
            msg_column_notify "%-30s %-30s %-30s %-30s" "$repo" "$package" "$artixfv" "$archfv"
        else
            msg_column "%-30s %-30s %-30s %-30s" "$repo" "$package" "$artixfv" "$archfv"
        fi

        unset pkgver epoch pkgrel
    done
done

for pkg in ${packages[@]}; do
    echo "Processing ${UPDATES[$pkg]}"
    [[ -f /usr/bin/meld ]] && meld ${UPDATES[$pkg]}
done

